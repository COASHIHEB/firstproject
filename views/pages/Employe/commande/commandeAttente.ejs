                                                                <div class="stars" style="margin-bottom: -9%;">
                                                                    <i class="fa fa-star "></i>
                                                                    <i class="fa fa-star "></i>
                                                                    <i class="fa fa-star "></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                </div>
                                                            </div>
                                                            <% }%>
                                                            <%if(commandeAttente[i].etoile[k].etoile == 1) {%>
                                                            <div class="text-center">
                                                                <div class="stars" style="margin-bottom: -9%;">
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star "></i>
                                                                    <i class="fa fa-star "></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                </div>
                                                            </div>
                                                            <% }%>
                                                            <%if(commandeAttente[i].etoile[k].etoile == 2) {%>
                                                            <div class="text-center">
                                                                <div class="stars" style="margin-bottom: -9%;">
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star "></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                </div>
                                                            </div>
                                                            <% }%>
                                                            <%if(commandeAttente[i].etoile[k].etoile == 3) {%>
                                                            <div class="text-center">
                                                                <div class="stars" style="margin-bottom: -9%;">
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star"></i>
                                                                    <i class="fa fa-star"></i>
                                                                </div>
                                                            </div>
                                                            <% }%>
                                                            <%if(commandeAttente[i].etoile[k].etoile == 4) {%>
                                                            <div class="text-center">
                                                                <div class="stars" style="margin-bottom: -9%;">
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star"></i>
                                                                </div>
                                                            </div>
                                                            <% }%>
                                                            <%if(commandeAttente[i].etoile[k].etoile == 5) {%>
                                                            <div class="text-center">
                                                                <div class="stars" style="
                                                                                        margin-bottom: -9%;">
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                    <i class="fa fa-star gold"></i>
                                                                </div>
                                                            </div>
